<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="20dp">

        <!--text view for displaying course name-->
        <TextView
            android:id="@+id/filterTV"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!--text view for displaying course tracks-->
        <TextView
            android:id="@+id/sortByTV"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/filterTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonGroup"
            android:text="Sort By"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"/>

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sortByTV"
            android:paddingLeft="5dp"
            app:justifyContent="flex_start"> <!-- this attribute is from the underlying FlexboxLayout -->

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/latestBT"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/themedColour"
                app:toggle_text="Latest" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/relevancyBT"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/themedColour"
                app:toggle_text="Relevancy" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/popularityBT"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/themedColour"
                app:toggle_text="Popularity" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <!--button for dismissing our dialog-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBT"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            android:text="Save"
            android:background="@drawable/button_design_red"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
