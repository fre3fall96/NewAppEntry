<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewsDetailFragment"
    app:defaultNavHost="true">
    <data>
        <variable
            name="DB_newsDetailFragment"
            type="com.example.newappentry.overview.NewsDetailFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Layout_NewsDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.newappentry.overview.NewsDetailFragment">

        <ImageView
            android:id="@+id/IV_newsImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
<FrameLayout
    android:id="@+id/Layout_newsInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/IV_newsImage"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_marginBottom="-80dp"
    android:elevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CLayout_newsInfo"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:padding="20dp"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/semiTransparentColor">

                <TextView
                    android:id="@+id/TV_newsDate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingTop="5dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TV_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/TV_newsDate"
                    android:gravity="start"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_authorName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toBottomOf="@id/TV_title"
                    android:textStyle="italic"
                    android:paddingTop="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

        <TextView
            android:id="@+id/TV_newsContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/Layout_newsInfo"
            android:padding="20dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/FAB_shareNews"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="@{()->DB_newsDetailFragment.shareContent()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_share"
            app:fabCustomSize="50dp"
            android:backgroundTint="#FF3A44"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>